<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CanalizacionTutor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/azul">

                <!-- Elemento 1 de la fila 1 -->
                <!-- Elemento 2 de la fila 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMenuTutor"
                    android:text="Menu"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

                <!-- Elemento 3 de la fila 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEntrevistaTutor"
                    android:text="Entrevista"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

                <!-- Elemento 4 de la fila 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCanalizacionTutor"
                    android:text="Canalizacion"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

                <!-- Elemento 4 de la fila 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAsesoriAcaTutor"
                    android:text="Asesoria"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

            </TableRow>

        </TableLayout>
    </LinearLayout>

</ScrollView>