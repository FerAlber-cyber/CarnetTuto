<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo01"
    tools:context=".EntrevistaAlumno">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/viewholder_background1">

                <Button
                    android:id="@+id/btnMenuAlum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Menu"
                    android:background="#00001253"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/btnEntrevista"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Entrevista"
                    android:background="#00001253"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/btnCanalizacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Canalizacion"
                    android:background="#00001253"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

                <Button
                    android:id="@+id/btnAsesoriaAca"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Canalizacion Academica"
                    android:background="#00001253"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>
            </TableRow>
        </TableLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEntrevista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/card_entrevistas"/>
    </LinearLayout>

    </HorizontalScrollView>


</ScrollView>