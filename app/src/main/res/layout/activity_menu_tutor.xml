<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@drawable/fondo01"
    tools:context=".MenuTutor">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="4">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/viewholder_background1">

                <!-- Elemento 1 de la fila 1 -->
                <!-- Elemento 2 de la fila 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMenuTutor"
                    android:text="Menu"
                    android:backgroundTint="#00001253"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

                <!-- Elemento 3 de la fila 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEntrevistaTutor"
                    android:text="Entrevista"
                    android:backgroundTint="@color/azul"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

                <!-- Elemento 4 de la fila 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCanalizacionTutor"
                    android:text="Canalizacion"
                    android:backgroundTint="@color/azul"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

                <!-- Elemento 4 de la fila 1 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAsesoriAcaTutor"
                    android:text="Canalizacion Academica"
                    android:backgroundTint="#00001253"
                    android:textColor="@color/dorado"
                    android:padding="8dp"/>

            </TableRow>

        </TableLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewUsuariosT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_usuario_tutor" />
        <Button
            android:id="@+id/btnAlumnosModify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alumnos"/>
    </LinearLayout>

    </HorizontalScrollView>

</ScrollView>